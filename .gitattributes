# Enforce LF line endings for all text files
* text=auto eol=lf

# Python files
*.py text eol=lf

# Configuration files  
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Makefile
Makefile text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf 