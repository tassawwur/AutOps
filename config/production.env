# Datadog
DATADOG_APP_KEY=${DATADOG_APP_KEY}

# PagerDuty
PAGERDUTY_SERVICE_ID=${PAGERDUTY_SERVICE_ID}

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/autops/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Celery (Background Tasks)
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_WORKER_CONCURRENCY=4

# Security Headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# CORS
CORS_ALLOWED_ORIGINS=["https://yourcompany.slack.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Feature Flags
ENABLE_ANOMALY_DETECTION=true
ENABLE_AUTO_REMEDIATION=false
ENABLE_HUMAN_APPROVAL=true
ENABLE_KNOWLEDGE_SEARCH=true
ENABLE_AUDIT_LOGGING=true

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Alerting
ALERT_EMAIL_ENABLED=true
ALERT_SLACK_ENABLED=true
ALERT_PAGERDUTY_ENABLED=true
ALERT_THRESHOLD_ERROR_RATE=5.0
ALERT_THRESHOLD_RESPONSE_TIME=3000 